{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "coppermind-widget",
    "version": "0.1.0",
    "identifier": "com.coppermind.widget",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:5174/widget.html",
        "beforeDevCommand": "bunx vite --port 5174",
        "beforeBuildCommand": "bun run build"
    },
    "app": {
        "windows": [
            {
                "title": "Focus",
                "url": "/widget",
                "width": 320,
                "height": 460,
                "resizable": false,
                "fullscreen": false,
                "decorations": true,
                "alwaysOnTop": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}